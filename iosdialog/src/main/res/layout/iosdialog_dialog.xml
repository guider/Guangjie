<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_conner10_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="提示"
            android:textColor="#333"
            android:textSize="17sp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="你确定要退出吗"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_divider" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/neutral_btn"
            style="@style/iosdialog_btn"
            android:layout_width="match_parent"
            android:background="@drawable/selector_middle_btn_bg"
            android:text="隐藏" />

        <LinearLayout
            android:id="@+id/linear_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cancel_btn"
                style="@style/iosdialog_btn"
                android:background="@drawable/selector_left_btn_bg"
                android:text="取消" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/shape_divider_vertial" />

            <TextView
                android:id="@+id/confirm_btn"
                style="@style/iosdialog_btn"
                android:background="@drawable/selector_right_btn_bg"
                android:text="确定" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>